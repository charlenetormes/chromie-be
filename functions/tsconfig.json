{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "outDir": "lib",
        "sourceMap": true,
        "strict": false,
        "target": "es2017",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "compileOnSave": true,
    "include": ["src"]
}
